<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="5" >

            <Button
                android:id="@+id/mon_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/button_bg_selector"
                android:padding="10dip"
                android:textColor="@drawable/button_text_selector"
                android:textSize="22dip" />

            <Button
                android:id="@+id/tue_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/button_bg_selector"
                android:padding="10dip"
                android:textColor="@drawable/button_text_selector"
                android:textSize="22dip" />

            <Button
                android:id="@+id/wed_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/button_bg_selector"
                android:padding="10dip"
                android:textColor="@drawable/button_text_selector"
                android:textSize="22dip" />

            <Button
                android:id="@+id/thu_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/button_bg_selector"
                android:padding="10dip"
                android:textColor="@drawable/button_text_selector"
                android:textSize="22dip" />

            <Button
                android:id="@+id/fri_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/button_bg_selector"
                android:padding="10dip"
                android:textColor="@drawable/button_text_selector"
                android:textSize="22dip" />
        </LinearLayout>

        <de.mmerg.mensa.FlingViewGroup
            android:id="@+id/fling_view_group"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#ffffff" >

            <ListView
                android:id="@+id/mon_list"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:divider="@null" >
            </ListView>

            <ListView
                android:id="@+id/tue_list"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:divider="@null" >
            </ListView>

            <ListView
                android:id="@+id/wed_list"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:divider="@null" >
            </ListView>

            <ListView
                android:id="@+id/thu_list"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:divider="@null" >
            </ListView>

            <ListView
                android:id="@+id/fri_list"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:divider="@null" >
            </ListView>
        </de.mgbc.mensa.FlingViewGroup>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/overlay"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#ccffffff"
        android:clickable="true"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:textColor="#555555"
                android:textSize="20dp" />
        </LinearLayout>
    </LinearLayout>

</merge>